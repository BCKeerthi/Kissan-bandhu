<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".buyerhomepage">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:layout_margin="30dp"
            android:background="#48000000" >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rent"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="102dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        app:srcCompat="@drawable/tractor" />

            <Button
                android:id="@+id/equipments"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="@string/equipments"
                android:layout_marginTop="15dp"
                android:textSize="15dp" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:layout_margin="30dp"
        android:background="#48000000" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buy"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/area"
                android:layout_width="119dp"
                android:layout_height="153dp"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/app_name"
                android:paddingRight="20dp"
                android:src="@drawable/tractor" />

            <ImageView
                android:id="@+id/volume"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:paddingLeft="45dp"
                android:src="@drawable/greenleaf" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:orientation="horizontal">

        <Button
            android:id="@+id/equipments_buy"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="@string/equip"
            android:textSize="15dp" />

        <Button
            android:id="@+id/pesticides"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="@string/pesticides"
            android:layout_marginLeft="25dp"
            android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav"
            android:layout_alignParentBottom="true"
            app:menu="@menu/menu_bar"
            android:background="@color/ash_top"/>


    </RelativeLayout>


</LinearLayout>